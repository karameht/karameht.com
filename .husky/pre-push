#!/usr/bin/env bash
set -o pipefail

LOG_DIR=".logs"
mkdir -p "$LOG_DIR"
LOG_FILE="$LOG_DIR/pre-push-$(date +%Y%m%d-%H%M%S).log"

run_and_log() {
  echo ">> $*" | tee -a "$LOG_FILE"
  "$@" 2>&1 | tee -a "$LOG_FILE"
  return ${PIPESTATUS[0]}
}

echo "🚀 Pre-Push Validation" | tee -a "$LOG_FILE"
echo "=======================" | tee -a "$LOG_FILE"

current_branch=$(git symbolic-ref --short HEAD)
echo "📍 Current branch: $current_branch" | tee -a "$LOG_FILE"

# Protect main/master
if [ "$current_branch" = "main" ] || [ "$current_branch" = "master" ]; then
  echo "⚠️  You're pushing to $current_branch!" | tee -a "$LOG_FILE"
  echo "🤔 Continue? This should usually be via Pull Request. (y/N)" | tee -a "$LOG_FILE"
  read -r response
  if [ "$response" != "y" ] && [ "$response" != "Y" ]; then
    echo "❌ Push cancelled for safety." | tee -a "$LOG_FILE"
    echo "Log saved to $LOG_FILE" | tee -a "$LOG_FILE"
    exit 1
  fi
fi

echo "🧪 Running validate (lint + build)..." | tee -a "$LOG_FILE"
run_and_log yarn validate
if [ $? -ne 0 ]; then
  echo "❌ Validation failed! Cannot push broken code. See $LOG_FILE" | tee -a "$LOG_FILE"
  exit 1
fi

echo "🧹 Cleaning up build artifacts..." | tee -a "$LOG_FILE"
run_and_log rm -rf dist

echo "✅ Pre-push validation complete!" | tee -a "$LOG_FILE"
echo "🚀 Safe to push to $current_branch" | tee -a "$LOG_FILE"
echo "Log saved to $LOG_FILE" | tee -a "$LOG_FILE"
echo "=======================" | tee -a "$LOG_FILE"
