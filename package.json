{
  "name": "karameht.com",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "astro check && prettier --check . && remark . --quiet --frail --ext .md,.mdx",
    "lint:md": "remark . --quiet --frail --ext .md,.mdx",
    "validate": "yarn lint && yarn build",
    "prepare": "husky",
    "md:format": "remark . --output --ext .md,.mdx",
    "fix": "yarn md:format && yarn format",
    "ready": "yarn fix && yarn validate"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.3.4",
    "@astrojs/react": "^4.3.0",
    "@fontsource-variable/inter": "^5.2.6",
    "@fontsource/allura": "^5.2.7",
    "@fontsource/space-mono": "^5.2.8",
    "@karameht/a11y-lens": "^0.0.1-beta.2.1",
    "astro": "^5.13.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "remark-cli": "^12.0.1",
    "remark-gfm": "^4.0.1",
    "remark-mdx": "^3.1.1",
    "remark-preset-lint-recommended": "^7.0.1",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro,css,scss,html,json,yml,yaml}": [
      "prettier --write"
    ],
    "*.{md,mdx}": [
      "prettier --write",
      "remark --quiet --frail"
    ]
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
