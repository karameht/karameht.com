---
export interface Props {
  class?: string;
  ariaLabel?: string;
  id?: string;
}

const { class: className, ariaLabel, id } = Astro.props as Props;
const current = Astro.url.pathname.replace(/\/$/, '') || '/';
---

<nav class={`nav ${className || ''}`} aria-label={ariaLabel} {id}>
  <ul class="nav__list">
    <li class="nav__item">
      <a href="/" class="nav__link" aria-current={current === '/' ? 'page' : undefined}
        >Die Manufaktur</a
      >
    </li>
    <li class="nav__item">
      <a
        href="/geselle"
        class="nav__link"
        aria-current={current === '/geselle' ? 'page' : undefined}>Der Geselle</a
      >
    </li>
    <li class="nav__item">
      <a href="/archiv" class="nav__link" aria-current={current === '/archiv' ? 'page' : undefined}
        >Das Archiv</a
      >
    </li>
  </ul>
</nav>
